<h1>Listing signatures</h1>

<table>
  <tr>
    <th>Log entry</th>
    <th>Person</th>
  </tr>

<% @signatures.each do |signature| %>
  <tr>
    <td><%=h signature.log_entry_id %></td>
    <td><%=h signature.person_id %></td>
    <td><%= link_to 'Show', signature %></td>
    <td><%= link_to 'Edit', edit_signature_path(signature) %></td>
    <td><%= link_to 'Destroy', signature, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New signature', new_signature_path %>